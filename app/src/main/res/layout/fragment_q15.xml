<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.FragmentQ15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="310dp"
        android:padding="20dp"
        android:background="@drawable/white_shape"
        android:elevation="0.5dp">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/c14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/question_15"
            android:textColor="@color/darkenBlue"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c14"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <RadioGroup
                android:id="@+id/criteriaCompare15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/genreCheckQ15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/vote_custom_radio_button"/>

                <RadioButton
                    android:id="@+id/countryCheckQ15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:button="@drawable/ratting_custom_radio_button"/>

            </RadioGroup>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/integrityLayoutQ15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:padding="10dp"
        android:elevation="0.5dp"
        android:visibility="invisible"
        android:background="@drawable/white_shape">

        <TextView
            android:id="@+id/integrity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/giving_integrity"
            android:textColor="@color/darkenBlue"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/btnGroupLayoutQ15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/integrity"
            android:gravity="center">

            <RadioGroup
                android:id="@+id/integrityQ15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/oneQ15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/one_integrity_custom_radio_button"/>

                <RadioButton
                    android:id="@+id/twoQ15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:button="@drawable/two_integrity_custom_radio_button"/>

                <RadioButton
                    android:id="@+id/threeQ15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:button="@drawable/three_integrity_custom_radio_button"/>

                <RadioButton
                    android:id="@+id/fourQ15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:button="@drawable/four_integrity_custom_radio_button"/>

                <RadioButton
                    android:id="@+id/fiveQ15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:button="@drawable/five_integrity_custom_radio_button"/>

                <RadioButton
                    android:id="@+id/sixQ15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:button="@drawable/six_integrity_custom_radio_button"/>

                <RadioButton
                    android:id="@+id/sevenQ15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:button="@drawable/seven_integrity_custom_radio_button"/>

                <RadioButton
                    android:id="@+id/eightQ15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:button="@drawable/eight_integrity_custom_radio_button"/>

                <RadioButton
                    android:id="@+id/nineQ15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:button="@drawable/nine_integrity_custom_radio_button"/>

            </RadioGroup>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>