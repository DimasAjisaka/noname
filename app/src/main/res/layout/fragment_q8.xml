<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.FragmentQ8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="310dp"
        android:padding="20dp"
        android:background="@drawable/white_shape"
        android:elevation="0.5dp">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/c8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/question_8"
            android:textColor="@color/darkenBlue"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c8"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <RadioGroup
                android:id="@+id/criteriaCompare8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/genreCheckQ8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/country_custom_radio_button"/>

                <RadioButton
                    android:id="@+id/countryCheckQ8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:button="@drawable/vote_custom_radio_button"/>

            </RadioGroup>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/integrityLayoutQ8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:padding="10dp"
        android:elevation="0.5dp"
        android:visibility="invisible"
        android:background="@drawable/white_shape">

        <TextView
            android:id="@+id/integrity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/giving_integrity"
            android:textColor="@color/darkenBlue"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/btnGroupLayoutQ8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/integrity"
            android:gravity="center">

            <RadioGroup
                android:id="@+id/integrityQ8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/oneQ8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/one_integrity_custom_radio_button"/>

                <RadioButton
                    android:id="@+id/twoQ8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:button="@drawable/two_integrity_custom_radio_button"/>

                <RadioButton
                    android:id="@+id/threeQ8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:button="@drawable/three_integrity_custom_radio_button"/>

                <RadioButton
                    android:id="@+id/fourQ8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:button="@drawable/four_integrity_custom_radio_button"/>

                <RadioButton
                    android:id="@+id/fiveQ8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:button="@drawable/five_integrity_custom_radio_button"/>

                <RadioButton
                    android:id="@+id/sixQ8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:button="@drawable/six_integrity_custom_radio_button"/>

                <RadioButton
                    android:id="@+id/sevenQ8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:button="@drawable/seven_integrity_custom_radio_button"/>

                <RadioButton
                    android:id="@+id/eightQ8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:button="@drawable/eight_integrity_custom_radio_button"/>

                <RadioButton
                    android:id="@+id/nineQ8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:button="@drawable/nine_integrity_custom_radio_button"/>

            </RadioGroup>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>